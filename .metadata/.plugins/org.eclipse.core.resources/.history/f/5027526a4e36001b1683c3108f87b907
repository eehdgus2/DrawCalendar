			if( thisDate <= 7 ) { //첫째주는 전부 지난달 정보
				for( let i = 0; i < 7; i++) {
					prevDates.unshift(PLDate-i);	
				} 
				for( let i = 1; i < 35-prevDates.length+1; i ++ ) {
					thisDates.push(i); 
				}
